{
  "extends": "./../ts/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "noImplicitThis": false,
    "preserveWatchOutput": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmit": true,
    "outDir": "dist",
    "noErrorTruncation": true,
    "types": [],
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "test"
  ]
}
